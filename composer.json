{
  "name": "sura/view",
  "description": "The Sura view.",
  "keywords": [
    "blade",
    "template",
    "view",
    "php",
    "templating"
  ],
  "license": "MIT",
  "type": "library",
  "authors": [
    {
      "name": "Semen Alekseev",
      "email": "semyon492@ya.ru",
      "homepage": "https://qd2.ru/"
    }
  ],
  "require": {
    "php": "^8.1",
    "ext-json": "*",
    "ext-iconv": "*",
    "ext-gd": "*",
    "ext-mysqli": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "squizlabs/php_codesniffer": "^3.6.0",
    "friendsofphp/php-cs-fixer": "^3.5"
  },
  "autoload": {
    "files": [
      "src/helpers.php"
    ],
    "psr-4": {
      "Sura\\View\\": "src/",
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "sniff": [
      "phpcs --extensions=php ."
    ],
    "fix": [
      "php-cs-fixer fix",
      "phpcbf --extensions=php ."
    ]
  }
}
